<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="horizontal">
    <Button
            android:text="Connect Printer"
            android:layout_width="205dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/connect" android:layout_weight="1"/>
    <Button
            android:text="Print"
            android:layout_width="205dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/print"/>
    <Button
            android:text="Cancel All"
            android:layout_width="205dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/cancel" android:layout_weight="1"/>
</LinearLayout>