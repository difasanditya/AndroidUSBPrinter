<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Printing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"/>
        <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flexWrap="wrap"
                app:justifyContent="center">
            <Button
                    android:text="Print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Print"/>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Printer Connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"/>
        <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flexWrap="wrap"
                app:justifyContent="center">
            <Button
                    android:text="Connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/connect"/>
            <Button
                    android:text="Disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/disconnect"/>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Standard Device Requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"/>
        <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flexWrap="wrap"
                app:justifyContent="center">
            <Button
                    android:text="Clear Feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/clearFeature"/>
            <Button
                    android:text="Get Configuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/getConfiguration"/>
            <Button
                    android:text="Get Descriptor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/getDescriptor"/>
            <Button
                    android:text="Get Interface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/getInterface"/>
            <Button
                    android:text="Get Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/getStatus"/>
            <Button
                    android:text="Set Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/setAddress"/>
            <Button
                    android:text="Set Configuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/setConfiguration"/>
            <Button
                    android:text="Set Descriptor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/setDescriptor"/>
            <Button
                    android:text="Set Interface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/setInterface"/>
            <Button
                    android:text="Set Feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/setFeature"/>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class Specific Requests" android:textAlignment="center" android:textStyle="bold"/>
        <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flexWrap="wrap"
                app:justifyContent="center">
            <Button
                    android:text="Soft Reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
                    tools:layout_editor_absoluteX="161dp" android:id="@+id/softReset"/>
            <Button
                    android:text="Get Device ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
                    tools:layout_editor_absoluteX="161dp" android:id="@+id/getDeviceID"/>
            <Button
                    android:text="Get Port Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
                    tools:layout_editor_absoluteX="161dp" android:id="@+id/getPortStatus"/>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Output" android:textAlignment="center" android:textStyle="bold"
                android:id="@+id/textView"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textOutput"/>
    </LinearLayout>
</LinearLayout>